<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header with back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/plant_green"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_b"
            app:tint="@android:color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Joint Flowers (Fasciation) Diagnosis"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Content with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Introduction Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Understanding Fasciation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/plant_green"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fasciation is an abnormal growth where a single growing point flattens and elongates, creating a wide, ribbon-like, or fused appearance. This can affect stems, flowers, and fruit, resulting in flowers that look like two or more have been fused together."
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘† Tap on the cards below to explore detailed causes and solutions for fasciated flowers."
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:layout_marginTop="12dp"
                        android:background="@color/light_green_background"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Joint Flower Types Container -->
            <LinearLayout
                android:id="@+id/jointFlowerTypesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Prevention Tips Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="General Prevention Tips"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/solution_blue"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Control pests early with regular inspections\nâ€¢ Handle young plants gently to avoid damage\nâ€¢ Protect from frost with covers during cold snaps\nâ€¢ Avoid herbicide drift near garden beds\nâ€¢ Don't propagate from fasciated parts if trait is undesirable\nâ€¢ Maintain consistent watering and proper nutrition"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remember: Fasciation is rarely harmful to overall plant health and is often just a unique natural curiosity!"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:layout_marginTop="12dp"
                        android:background="@color/light_green_background"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>