<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_back_b"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Outdoor Plants Care"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detailed Care Tips for Outdoor Plants"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp"
                android:textAlignment="center" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creating a thriving outdoor garden requires understanding your environment and choosing the right plants for your specific conditions. Success starts with choosing plants that will naturally thrive in your location."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp" />

            <!-- Outdoor Garden Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/outdoor_garden_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/outdoor_garden_flowers" />

            </androidx.cardview.widget.CardView>

            <!-- Care Tips Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essential Care Tips:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="16dp" />

            <!-- Right Plant, Right Place Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1. Right Plant, Right Place"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is the golden rule of outdoor gardening. Success starts with choosing plants that will naturally thrive in your specific location."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Sunlight: Observe your garden throughout the day. Does it get Full Sun (6+ hours of direct sun), Part Sun/Shade (3-6 hours), or Full Shade (less than 3 hours)? Choose plants labeled for that light requirement.\n\nâ€¢ Know Your Zone: Find your USDA Plant Hardiness Zone. This tells you which plants can survive the winter in your climate. Planting out-of-zone perennials is a common mistake.\n\nâ€¢ Space Accordingly: Read the plant tag to see its mature size. A small shrub can grow into a massive bush, so give it room to grow to avoid overcrowding."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Prepare the Soil Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E8F5E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ±"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2. Prepare the Soil"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Healthy soil is the foundation of a healthy garden. Unlike indoor potting mix, garden soil needs improvement."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Amend, Don't Replace: Improve your native soil by mixing in 2-4 inches of compost or other organic matter. This helps with drainage in heavy clay soil and water retention in sandy soil.\n\nâ€¢ For Containers: If you're using large outdoor pots, use a quality potting mix, not garden soil, which becomes too compacted in containers."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Water Deeply and Wisely Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’§"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3. Water Deeply and Wisely"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Outdoor watering strategies are different due to rain and heat."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Water the Roots, Not the Leaves: Apply water directly to the base of the plant. Wet leaves can encourage fungal diseases.\n\nâ€¢ Water Deeply, Less Often: A long, deep soaking encourages roots to grow deeper into the ground, making them more resilient to drought. A light daily sprinkle only wets the surface.\n\nâ€¢ Best Time to Water: Early morning is ideal. It allows water to soak in before the sun gets hot and evaporates it, and gives leaves time to dry before nightfall."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Use Mulch Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‚"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4. Use Mulch!"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#E65100" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mulch is a gardener's best friend. It's a layer of material (like wood chips, shredded leaves, or straw) spread over the soil."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Retains Moisture: Reduces water evaporation, so you water less.\n\nâ€¢ Suppresses Weeds: Blocks sunlight from reaching weed seeds.\n\nâ€¢ Regulates Temperature: Keeps soil cooler in the summer and warmer in the winter."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Prune for Health and Shape Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#F3E5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ‚ï¸"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5. Prune for Health and Shape"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#7B1FA2" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pruning is like giving your plant a strategic haircut."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Remove the 3 D's: Regularly cut off any Dead, Diseased, or Damaged branches.\n\nâ€¢ Improve Airflow: Thinning out crowded branches allows air to circulate, reducing the risk of disease.\n\nâ€¢ Know When to Prune: A general rule is to prune flowering shrubs right after they finish blooming. Prune for shape in late winter or early spring before new growth begins."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Be a Pest Detective Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFEBEE">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ›"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="6. Be a Pest Detective"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#C62828" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pests and diseases are a natural part of gardening."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Inspect Regularly: Check the leaves (including the undersides) for signs of trouble like holes, spots, or insects.\n\nâ€¢ Start with Gentle Solutions: Often, a strong spray of water from the hose can knock off pests like aphids. For more persistent issues, consider insecticidal soap before reaching for stronger chemicals.\n\nâ€¢ Encourage Good Bugs: Many insects, like ladybugs and bees, are beneficial to your garden."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>