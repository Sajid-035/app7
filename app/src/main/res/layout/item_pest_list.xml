<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pestCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Pest Icon Container -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background_light_green"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pestIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_aphids"
                app:tint="#4CAF50"
                android:contentDescription="Pest Icon" />

        </LinearLayout>

        <!-- Pest Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Root aphids"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pestCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Plant Pest"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@android:color/darker_gray"
            android:contentDescription="Arrow" />

    </LinearLayout>

</androidx.cardview.widget.CardView>