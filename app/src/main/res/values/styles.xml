<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card elevation styles -->
    <style name="CardElevationLow">
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CardElevationMedium">
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CardElevationHigh">
        <item name="cardElevation">12dp</item>
    </style>

    <!-- Text styles -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubHeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="FeatureTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2D3748</item>
    </style>

    <style name="NavPillStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Button styles -->
    <style name="RoundedButtonStyle">
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>