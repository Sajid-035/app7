<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color - light blue for info card -->
    <solid android:color="#E3F2FD" />

    <!-- Rounded corners for card appearance -->
    <corners android:radius="8dp" />

    <!-- Border/stroke for card definition -->
    <stroke
        android:width="1dp"
        android:color="#2196F3" />

    <!-- Padding for text content -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>